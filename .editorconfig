root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
insert_final_newline = false
max_line_length = 100

[*.css]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_size = 2
tab_width = 2

[{.eslintrc,jest.config,.stylelintrc,.babelrc,bowerrc,*.json,*.jsb3,*.jsb2}]
indent_size = 2
